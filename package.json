{
  "name": "@i-xi-dev/ms932-encoder",
  "version": "1.2.2",
  "description": "A JavaScript Windows-31J encoder, implements Shift_JIS encoder defined in WHATWG Encoding Standard.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./node/index.mjs",
      "default": "./dist/index.js"
    },
    "./stream": {
      "node": "./node/stream/index.mjs",
      "default": "./dist/stream/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "mocha test/node/ --recursive --timeout 4000",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/ms932-encoder.es.git"
  },
  "keywords": [
    "ms932",
    "shift_jis",
    "windows-31j",
    "textencoder",
    "textencoderstream",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "i-xi-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/ms932-encoder.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/ms932-encoder.es#readme",
  "files": [
    "dist",
    "node"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
